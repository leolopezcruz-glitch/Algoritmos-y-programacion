Algoritmo diagrama4
	Definir SUMA, NUMERO Como Entero;
	SUMA <- 0;
    NUMERO <- 2;
	// Bucle para sumar los números pares
    Mientras NUMERO <= 100 Hacer
        SUMA <- SUMA + NUMERO;
        NUMERO <- NUMERO + 2;
    FinMientras
	Escribir "La suma de los números pares del 2 al 100 es: ", SUMA;
FinAlgoritmo
